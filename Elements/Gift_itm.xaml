<UserControl x:Class="PR23_Konevskii.Elements.Gift_itm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PR23_Konevskii.Elements"
             mc:Ignorable="d" >
    <Border Background="#FFF1F1F1" CornerRadius="7">
        <Grid>
            <Label Content="ФИО заказчика" x:Name="name_user" 
                   Foreground="Black" FontFamily="Corbel"
                   HorizontalAlignment="Left" VerticalContentAlignment="Bottom"
                   Height="35" VerticalAlignment="Top" FontWeight="Bold" FontSize="18" Margin="20,20"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Текст сообщения" x:Name="text_user" 
                   Foreground="Black" FontFamily="Corbel"
                   HorizontalAlignment="Left" VerticalContentAlignment="Bottom"
                   Height="35" VerticalAlignment="Top" FontSize="16" Margin="30,50,100,0" Grid.Column="0"/>
                <Label Content="Адрес доставки" x:Name="addres_user" 
                   Foreground="Black" FontFamily="Corbel"
                   HorizontalAlignment="Left" VerticalContentAlignment="Bottom"
                   Height="35" VerticalAlignment="Top" FontSize="16" Margin="30,80,100,0" Grid.Column="0"/>
                <Label Content="Дата и время доставки" x:Name="date_user" 
                   Foreground="Black" FontFamily="Corbel"
                   HorizontalAlignment="Left" VerticalContentAlignment="Bottom"
                   Height="35" VerticalAlignment="Top" FontSize="16" Margin="30,50,175,0" Grid.Column="1"/>
                <Label Content="Почта для связи" x:Name="mail_user" 
                   Foreground="Black" FontFamily="Corbel"
                   HorizontalAlignment="Left" VerticalContentAlignment="Bottom"
                   Height="35" VerticalAlignment="Top" FontSize="16" Margin="30,80,175,0" Grid.Column="1"/>
                <Button Content="Изменить" Grid.Column="1" Height="25" Width="75" VerticalAlignment="Top" Click="Edit" Margin="20,20" HorizontalAlignment="Right"/>
                <Button Content="Удалить" Grid.Column="1" Height="25" Width="75" VerticalAlignment="Top" Click="Remove" Margin="20,60" HorizontalAlignment="Right"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
