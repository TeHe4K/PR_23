<Page x:Class="PR23_Konevskii.Pages.Gift_win"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR23_Konevskii.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="Gift_win">

    <Border CornerRadius="10,0,0,0">
        <Border.Background>
            <SolidColorBrush Color="White" Opacity="1.0"/>
        </Border.Background>

        <Grid>

            <ScrollViewer x:Name="scroll_user">
                <Border x:Name="Info_user" MinHeight="530">
                    <Grid>
                        <Label Content="Подарок" Margin="39,28,26,0" Foreground="Black" FontSize="30" FontFamily="Yu Gothic UI Semibold"
                            HorizontalContentAlignment="Left" Height="52" VerticalAlignment="Top"/>

                        <Label Content="ФИО" Margin="39,85,232,0" Foreground="Black" FontSize="15" FontFamily="Yu Gothic UI Semilight"
                            HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
                        <TextBox x:Name="fio_user" Height="35" Background="#FFDEDEDE" Margin="39,112,28,0" VerticalAlignment="Top"/>

                        <Label Content="Текст сообщения" Margin="39,149,232,0" Foreground="Black" FontSize="15" FontFamily="Yu Gothic UI Semilight"
                     HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
                        <TextBox x:Name="text_user" Height="35" Background="#FFDEDEDE" Margin="39,176,28,0" VerticalAlignment="Top"/>

                        <Label Content="Адрес доставки" Margin="39,213,232,0" Foreground="Black" FontSize="15" FontFamily="Yu Gothic UI Semilight"
                     HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
                        <TextBox x:Name="addrec_user" Height="35" Background="#FFDEDEDE" Margin="39,240,28,0" VerticalAlignment="Top"/>

                        <Grid Margin="30,299,126,195">
                            <DatePicker  x:Name="date" Height="35" Margin="9,10,214,0" VerticalAlignment="Top" FontFamily="Yu Gothic UI Semilight" FontSize="14"/>
                            <TextBox x:Name="time" Height="35" Background="#FFDEDEDE" Margin="0,10,19,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="185"/>
                        </Grid>

                        <Button Background="#2b2b2b" Margin="0,0,136.2,24" VerticalAlignment="Bottom" Height="40" HorizontalAlignment="Right" Width="105" Click="Click_User_Redact" Content="Применить" Foreground="White" FontWeight="Bold"/>


                        <Button x:Name="btn_cancel" Background="#FFE48F2B" Margin="0,0,26.2,24" VerticalAlignment="Bottom" Height="40" HorizontalAlignment="Right" Width="105" Click="Click_Cancel_User_Redact" Content="Назад" Foreground="White" FontWeight="Bold"/>


                        <Button x:Name="btn_remove" Background="#FFE42F2B" Margin="30,0,0,23.6" VerticalAlignment="Bottom" Height="40" HorizontalAlignment="Left" Width="105" Click="Click_Remove_User_Redact" Content="Удалить" Foreground="White" FontWeight="Bold"/>
                        <Label Content="Дата доставки и время доставки" Margin="39,280,232,0" Foreground="Black" FontSize="15" FontFamily="Yu Gothic UI Semilight"
                            HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
                        <Label Content="Почта для связи" Margin="40,347,231,0" Foreground="Black" FontSize="15" FontFamily="Yu Gothic UI Semilight"
                            HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
                        <TextBox x:Name="mail_user" Height="35" Background="#FFDEDEDE" Margin="40,374,27,0" VerticalAlignment="Top"/>
                    </Grid>
                </Border>
            </ScrollViewer>
        </Grid>
    </Border>
</Page>
